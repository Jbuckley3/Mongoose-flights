<h1>Add Flight</h1>
<form action="/flights" method="post">
    <!-- Your form fields go here -->
    <label for="airline">Airline:</label>
    <input type="text" name="airline" required>

    <label for="airport">Airport:</label>
    <select name="airport" required>
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <!-- Add other options as needed -->
    </select>

    <label for="flightNo">Flight No:</label>
    <input type="number" name="flightNo" min="10" max="9999" required>

    <label for="departs">Departure:</label>
    <input type="datetime-local" name="departs" required>

    <button type="submit">Add Flight</button>
</form>
